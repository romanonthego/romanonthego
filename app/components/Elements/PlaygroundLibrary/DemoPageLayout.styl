.wrap
  display: flex
  flex-direction: row
  justify-content: flex-start
  align-items: stretch
  min-width: x(320)

  +media('tablet')
    flex-direction: column

  +media('phone')
    flex-direction: column

.menuWrap
  display: block
  flex: 0 0 auto
  color: white
  padding: x(20) x(10)
  background-color: rgba(white, 0.10)
  width: x(260)

  > .menu
    position: sticky
    top: x(20)

    +media('tablet')
      position: static
    +media('phone')
      position: static


  +media('tablet')
    padding: x(10)
    width: 100%
    margin-bottom: x(20)

  +media('phone')
    padding: x(10)
    width: 100%
    margin-bottom: x(20)

.content
  display: flex
  flex-direction: column
  justify-content: flex-start
  align-items: flex-start
  padding: 0  0 0 x(20)

  flex: 1 1 auto
  width: 100%
  overflow: hidden

  +media('tablet')
    padding: 0

  +media('phone')
    padding: 0

.menu
  margin-left: x(5)
  padding-left: x(5)
  .menu
    margin-bottom: x(10)

.node
  padding: 0
  marginBottom: x(20)

.nodeName
  margin: 0
  opacity: 0.6

.leaf
  display: block
  margin: 0



applyMediaCache()
