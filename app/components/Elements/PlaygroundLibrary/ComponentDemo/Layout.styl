.demo
  display: flex
  flex-direction: row
  justify-content: flex-start
  align-items: stretch
  margin-bottom: x(20)

  +media('tablet')
    flex-direction: column
    width: 100%
    margin-bottom: x(10)

  +media('phone')
    flex-direction: column
    width: 100%
    margin-bottom: x(10)

.targetWrap
  padding: 0
  display: flex
  flex-direction: row
  justify-content: center
  align-items: center
  flex: 1 0 auto
  overflow: hidden

  +media('tablet')
    min-height: x(320)
  +media('phone')
    min-height: x(320)

.dark, .light, .none
  position: relative

  &:before
    background-size: x(20) x(20)
    content: ""
    opacity: 0.5
    top: 0
    left: 0
    bottom: 0
    right: 0
    position: absolute
    z-index: 1
  > *
    z-index: 2

.dark
  &:before
    background-color: black
    background-image: url('./assets/dark.svg')

.light
  &:before
    background-color: white
    background-image: url('./assets/light.svg')

.none
  &:before
    background-color: transparent
    background-image: none

.controllsWrap
  display: flex
  flex-direction: column
  justify-content: flex-start
  align-items: stretch
  width: x(320)
  flex: 0 0 auto
  margin-right: x(20)

  +media('tablet')
    width: 100%
    margin-right: 0


  +media('phone')
    width: 100%
    margin-right: 0

.controlsSpacer
  flex: 1 0 auto
  background-color: rgba(white, 0.1)
  display: flex
  flex-direction: row
  justify-content: center
  align-items: center
  &:after
    display: flex
    flex-direction: row
    justify-content: center
    align-items: center
    content: '^ interactive props'
    padding: x(10) 0
    opacity: 0.8


applyMediaCache()
