.header
  display: flex
  flex-direction: row
  justify-content: flex-start
  align-items: center
  width: 100%

.mainNav, .secondaryNav
  > ul
    list-style: none
    display: flex
    flex-direction: row
    align-items: center

    > li
      display: flex
      flex-direction: row
      justify-content: center
      align-items: center
      height: x(30)
      margin-right: x(20)
      &:last-child
        margin-right: 0

.mainNav
  flex: 1

.secondaryNav
  flex: 0
