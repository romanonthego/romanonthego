.footer
  width: 100%

.mainNav
  width: 100%
  display: flex
  flex-direction: column
  justify-content: flex-start
  align-items: flex-start

.mainList, .secondaryList
  list-style: none
  display: flex
  flex-direction: row
  justify-content: flex-start
  align-items: center

  > li
    height: x(30)
    display: flex
    flex-direction: row
    justify-content: center
    align-items: center
    margin-right: x(20)
    &:last-child
      margin-right: 0
