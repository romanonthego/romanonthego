.footer
  position: relative

  ul
    list-style: none
    display: flex
    flex-direction: row
    justify-content: flex-start
    align-items: flex-end

    +media('phone')
      flex-direction: column
      align-items: flex-start

    li
      margin-right: 20px

      +media('phone')
        margin-right: 0
        margin-bottom: 10px

      &:last-child
        margin-right: 0

        +media('phone')
          margin-bottom: 0

.socialLinks
  justify-content: flex-start
  align-items: flex-end !important

  +media('phone')
    margin-top: x(20)
    align-items: flex-start !important

.navigations
  display: flex
  flex-direction: row
  justify-content: space-between

  +media('phone')
    flex-direction: column

.resumeLink
  align-self: flext-end

applyMediaCache()
